# Slack Bot Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Remote Repository Configuration
REMOTE_REPO_URL=https://github.com/grafana/k8s-monitoring-helm.git
REMOTE_REPO_BRANCH=main
LOCAL_CLONE_PATH=/tmp/k8s-monitoring-helm

# Bot Configuration
BOT_NAME=k8s-monitoring-bot
ENABLE_VECTOR_SEARCH=true

# Optional: Specific channels to monitor (comma-separated)
MONITORED_CHANNELS=

# Response Configuration
MAX_CONTEXT_FILES=5
MAX_RESPONSE_LENGTH=3000

# Auto-update interval in seconds (default: 3600 = 1 hour)
# Set to 0 to disable auto-updates
AUTO_UPDATE_INTERVAL=3600
