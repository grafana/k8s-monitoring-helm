{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "deployAsConfigMap": {
            "type": "boolean"
        },
        "excludeNamespaces": {
            "type": "array"
        },
        "extraLogProcessingRules": {
            "type": "string"
        },
        "extraLogProcessingStages": {
            "type": "string"
        },
        "includePodMetadataLabels": {
            "type": "boolean"
        },
        "labelSelectors": {
            "type": "object"
        },
        "namespaces": {
            "type": "array"
        },
        "nodeFilter": {
            "type": "boolean"
        },
        "onlyGatherNewLogLines": {
            "type": "boolean"
        },
        "secretFilter": {
            "type": "object",
            "properties": {
                "allowlist": {
                    "type": "array"
                },
                "enableEntropy": {
                    "type": "boolean"
                },
                "enabled": {
                    "type": "boolean"
                },
                "gitleaksConfigPath": {
                    "type": "string"
                },
                "gitleaksConfigPathFrom": {
                    "type": "string"
                },
                "includeGeneric": {
                    "type": "boolean"
                },
                "inclusionSelector": {
                    "type": "string"
                },
                "partialMask": {
                    "type": "integer"
                },
                "redactWith": {
                    "type": "null"
                }
            }
        },
        "staticLabels": {
            "type": "object"
        },
        "staticLabelsFrom": {
            "type": "object"
        },
        "structuredMetadata": {
            "type": "object",
            "properties": {
                "k8s.pod.name": {
                    "type": "string"
                },
                "pod": {
                    "type": "string"
                },
                "service.instance.id": {
                    "type": "string"
                }
            }
        }
    }
}
