{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "global": {
            "type": "object",
            "properties": {
                "kubernetesAPIService": {
                    "type": "string"
                },
                "maxCacheSize": {
                    "type": "integer"
                },
                "platform": {
                    "type": "string",
                    "enum": [
                        "",
                        "openshift"
                    ]
                },
                "scrapeClassicHistograms": {
                    "type": "boolean"
                },
                "scrapeInterval": {
                    "type": "string"
                },
                "scrapeNativeHistograms": {
                    "type": "boolean"
                },
                "scrapeProtocols": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "scrapeTimeout": {
                    "type": "string"
                }
            }
        },
        "opencost": {
            "type": "object",
            "properties": {
                "extraDiscoveryRules": {
                    "type": "string"
                },
                "extraMetricProcessingRules": {
                    "type": "string"
                },
                "jobLabel": {
                    "type": "string"
                },
                "labelMatchers": {
                    "type": "object"
                },
                "maxCacheSize": {
                    "type": "null"
                },
                "metricsSource": {
                    "type": "string"
                },
                "metricsTuning": {
                    "type": "object",
                    "properties": {
                        "excludeMetrics": {
                            "type": "array"
                        },
                        "includeMetrics": {
                            "type": "array"
                        },
                        "useDefaultAllowList": {
                            "type": "boolean"
                        }
                    }
                },
                "namespace": {
                    "type": "string"
                },
                "scrapeInterval": {
                    "type": "string"
                },
                "scrapeTimeout": {
                    "type": "string"
                }
            }
        }
    }
}
