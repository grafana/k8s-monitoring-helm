{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "annotations": {
            "type": "object",
            "properties": {
                "job": {
                    "type": "string"
                }
            }
        },
        "deployAsConfigMap": {
            "type": "boolean"
        },
        "excludeNamespaces": {
            "type": "array"
        },
        "extraDiscoveryRules": {
            "type": "string"
        },
        "extraLogProcessingStages": {
            "type": "string"
        },
        "labelSelectors": {
            "type": "object"
        },
        "labels": {
            "type": "object",
            "properties": {
                "app_kubernetes_io_name": {
                    "type": "string"
                }
            }
        },
        "namespaces": {
            "type": "array"
        },
        "nodeLabels": {
            "type": "object",
            "properties": {
                "availabilityZone": {
                    "type": "boolean"
                },
                "instanceType": {
                    "type": "boolean"
                },
                "nodeArchitecture": {
                    "type": "boolean"
                },
                "nodeOS": {
                    "type": "boolean"
                },
                "nodePool": {
                    "type": "boolean"
                },
                "nodeRole": {
                    "type": "boolean"
                },
                "region": {
                    "type": "boolean"
                }
            }
        },
        "nodeSelectors": {
            "type": "object"
        },
        "secretFilter": {
            "type": "object",
            "properties": {
                "allowlist": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "enabled": {
                    "type": "boolean"
                },
                "includeGeneric": {
                    "type": "boolean"
                },
                "partialMask": {
                    "type": "integer"
                }
            }
        },
        "staticLabels": {
            "type": "object"
        },
        "staticLabelsFrom": {
            "type": "object"
        },
        "structuredMetadata": {
            "type": "object",
            "properties": {
                "k8s.pod.name": {
                    "type": "string"
                },
                "pod": {
                    "type": "string"
                },
                "service.instance.id": {
                    "type": "string"
                }
            }
        },
        "gatherMethod": {
            "enum": [
                "volumes",
                "filelog",
                "kubernetesApi"
            ]
        }
    }
}
