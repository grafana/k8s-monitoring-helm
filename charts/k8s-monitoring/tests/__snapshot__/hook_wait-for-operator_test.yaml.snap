should create hook when operator is deployed and readiness is enabled:
  1: |
    backoffLimit: 3
    template:
      metadata:
        labels:
          app.kubernetes.io/instance: RELEASE-NAME
          app.kubernetes.io/name: release-name-k8s-monitoring
          sidecar.istio.io/inject: "false"
        name: release-name-k8s-monitoring-wait-alloy-operator
      spec:
        containers:
          - command:
              - /bin/bash
              - -ce
              - |
                echo "Waiting for Alloy Operator to be ready..."
                kubectl wait \
                  --timeout=300s \
                  --namespace=NAMESPACE \
                  --for=condition=available \
                  deployment/RELEASE-NAME-alloy-operator

                echo "Verifying Alloy Operator pod is running..."
                kubectl wait \
                  --timeout=120s \
                  --namespace=NAMESPACE \
                  --for=condition=ready \
                  pod -l app.kubernetes.io/name=alloy-operator

                echo "Alloy Operator is ready!"
            image: ghcr.io/grafana/helm-chart-toolbox-kubectl:0.1.1
            imagePullPolicy: IfNotPresent
            name: wait-for-operator
            securityContext:
              allowPrivilegeEscalation: false
              capabilities:
                drop:
                  - ALL
              readOnlyRootFilesystem: true
              seccompProfile:
                type: RuntimeDefault
        nodeSelector:
          kubernetes.io/os: linux
        restartPolicy: Never
        serviceAccountName: release-name-k8s-monitoring-wait-alloy-operator
    ttlSecondsAfterFinished: 300
