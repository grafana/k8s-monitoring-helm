{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "attempts": {
            "type": "integer"
        },
        "delay": {
            "type": "integer"
        },
        "fullnameOverride": {
            "type": "string"
        },
        "global": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "object",
                    "properties": {
                        "pullSecrets": {
                            "type": "array"
                        },
                        "registry": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "image": {
            "type": "object",
            "properties": {
                "pullSecrets": {
                    "type": "array"
                },
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "initialDelay": {
            "type": "integer"
        },
        "nameOverride": {
            "type": "string"
        },
        "pod": {
            "type": "object",
            "properties": {
                "extraAnnotations": {
                    "type": "object"
                },
                "extraLabels": {
                    "type": "object"
                },
                "nodeSelector": {
                    "type": "object",
                    "properties": {
                        "kubernetes.io/os": {
                            "type": "string"
                        }
                    }
                },
                "serviceAccount": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "tolerations": {
                    "type": "array"
                }
            }
        },
        "tests": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/test"
            }
        }
    },
    "definitions": {
        "query": {
            "type": "object",
            "properties": {
                "query": {
                    "type": "string"
                },
                "type": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "enum": [
                        "promql",
                        "logql",
                        "traceql",
                        "pyroql"
                    ]
                },
                "expect": {
                    "type": "object",
                    "properties": {
                        "operator": {
                            "type": [
                                "string",
                                "null"
                            ],
                            "enum": [
                                "<",
                                "<=",
                                "=",
                                "==",
                                "!=",
                                "=>",
                                ">"
                            ]
                        },
                        "value": {
                            "type": "number"
                        }
                    }
                }
            }
        },
        "test": {
            "type": "object",
            "properties": {
                "env": {
                    "type": "object",
                    "properties": {
                        "PROMETHEUS_URL": {
                            "type": "string"
                        },
                        "PROMETHEUS_USER": {
                            "type": "string"
                        },
                        "PROMETHEUS_PASS": {
                            "type": "string"
                        },
                        "LOKI_URL": {
                            "type": "string"
                        },
                        "LOKI_TENANTID": {
                            "type": [
                                "string",
                                "number"
                            ]
                        },
                        "LOKI_USER": {
                            "type": "string"
                        },
                        "LOKI_PASS": {
                            "type": "string"
                        },
                        "TEMPO_URL": {
                            "type": "string"
                        },
                        "TEMPO_USER": {
                            "type": "string"
                        },
                        "TEMPO_PASS": {
                            "type": "string"
                        },
                        "PROFILECLI_URL": {
                            "type": "string"
                        },
                        "PROFILECLI_USER": {
                            "type": "string"
                        },
                        "PROFILECLI_PASS": {
                            "type": "string"
                        }
                    }
                },
                "queries": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/query"
                    }
                }
            }
        }
    }
}
