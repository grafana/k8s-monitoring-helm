{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "deployAsConfigMap": {
            "type": "boolean"
        },
        "excludeNamespaces": {
            "type": "array"
        },
        "extraDiscoveryRules": {
            "type": "string"
        },
        "extraLogProcessingStages": {
            "type": "string"
        },
        "fullnameOverride": {
            "type": "string"
        },
        "gatherMethod": {
            "type": "string",
            "enum": [
                "volumes",
                "kubernetesApi"
            ]
        },
        "global": {
            "type": "object",
            "properties": {
                "platform": {
                    "type": "string"
                }
            }
        },
        "nameOverride": {
            "type": "string"
        },
        "namespaces": {
            "type": "array"
        }
    }
}
