# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Makefiles
[{Makefile,**.mk}]
indent_style = tab

# Python Files
[*.py]
indent_style = space
indent_size = 4
